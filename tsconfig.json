{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/validations/*": [
        "src/validations/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/app/*": [
        "src/app/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
